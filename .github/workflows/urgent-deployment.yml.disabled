name: ğŸš€ URGENT Auto-Deployment Pipeline

on:
  push:
    branches: [ main, master ]
  workflow_dispatch:
  schedule:
    # Auto-deploy every hour during business hours
    - cron: '0 9-17 * * 1-5'

env:
  NODE_VERSION: '18'
  FIREBASE_PROJECT: 'souk-el-syarat'

jobs:
  urgent-deploy:
    name: ğŸš€ Immediate Fullstack Deployment
    runs-on: ubuntu-latest
    
    steps:
    - name: ğŸš€ Checkout Code
      uses: actions/checkout@v4
      
    - name: ğŸš€ Setup Node.js
      uses: actions/setup-node@v4
      with:
        node-version: ${{ env.NODE_VERSION }}
        cache: 'npm'
        
    - name: ğŸš€ Install Firebase CLI
      run: npm install -g firebase-tools
      
    - name: ğŸš€ Install Dependencies
      run: npm ci
      
    - name: ğŸš€ Build Frontend
      run: NODE_ENV=production CI=true npm run build
      
    - name: ğŸš€ Build Functions
      run: |
        cd functions
        npm ci
        npm run build
        cd ..
        
    - name: ğŸš€ Deploy to Firebase
      uses: FirebaseExtended/action-hosting-deploy@v0
      with:
        repoToken: '${{ secrets.GITHUB_TOKEN }}'
        firebaseServiceAccount: '${{ secrets.FIREBASE_SERVICE_ACCOUNT }}'
        projectId: ${{ env.FIREBASE_PROJECT }}
        channelId: live
        
    - name: ğŸš€ Deploy Functions
      run: firebase deploy --only functions --token "${{ secrets.FIREBASE_TOKEN }}"
      
    - name: ğŸš€ Deploy Security Rules
      run: firebase deploy --only firestore:rules,storage --token "${{ secrets.FIREBASE_TOKEN }}"
      
    - name: ğŸš€ Deploy Indexes
      run: firebase deploy --only firestore:indexes --token "${{ secrets.FIREBASE_TOKEN }}"
      
    - name: ğŸš€ Get Live URL
      id: get-url
      run: |
        echo "url=https://${{ env.FIREBASE_PROJECT }}.web.app" >> $GITHUB_OUTPUT
        
    - name: ğŸš€ Deployment Success
      run: |
        echo "ğŸ‰ğŸ‰ğŸ‰ URGENT DEPLOYMENT COMPLETED! ğŸ‰ğŸ‰ğŸ‰"
        echo "Your app is now LIVE at: ${{ steps.get-url.outputs.url }}"
        echo "Ready for production traffic immediately!"
        
    - name: ğŸš€ Notify Success
      if: success()
      run: |
        echo "âœ… Deployment successful!"
        echo "ğŸŒ Live URL: ${{ steps.get-url.outputs.url }}"
        
    - name: ğŸš€ Notify Failure
      if: failure()
      run: |
        echo "âŒ Deployment failed!"
        echo "Please check the logs and fix issues immediately!"
