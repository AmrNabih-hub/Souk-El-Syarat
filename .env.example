# üîê Environment Variables Template
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control!

# ========================================
# SUPABASE CONFIGURATION
# ========================================
# Get these from your Supabase project settings:
# https://app.supabase.com/project/_/settings/api

VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Service Role Key (ADMIN ONLY - Never expose to client)
# Only use this in secure server-side contexts
VITE_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ========================================
# APPLICATION CONFIGURATION
# ========================================

# Application Environment
VITE_APP_ENV=development
# Options: development | staging | production

# Application Name
VITE_APP_NAME=Souk El-Sayarat

# Application URL
VITE_APP_URL=http://localhost:5000

# ========================================
# EMAIL CONFIGURATION (Optional)
# ========================================
# If using ReplitMail or similar service

VITE_REPLIT_MAIL_KEY=your-replit-mail-key-here
VITE_ADMIN_EMAIL=admin@soukalsayarat.com

# ========================================
# FEATURE FLAGS
# ========================================

# Enable/Disable Features
VITE_ENABLE_REALTIME=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true

# ========================================
# THIRD-PARTY SERVICES (Optional)
# ========================================

# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking
VITE_SENTRY_DSN=your-sentry-dsn-here

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================

# Debug Mode (development only)
VITE_DEBUG=false

# API Rate Limiting
VITE_API_RATE_LIMIT=100

# ========================================
# SECURITY CONFIGURATION
# ========================================

# Session Timeout (in minutes)
VITE_SESSION_TIMEOUT=60

# Max Upload Size (in MB)
VITE_MAX_UPLOAD_SIZE=5

# Allowed File Types
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# ========================================
# VERCEL DEPLOYMENT (Production)
# ========================================
# These are automatically set by Vercel
# You don't need to set them manually

# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=your-app.vercel.app

# ========================================
# NOTES
# ========================================
# 1. Replace all placeholder values with your actual credentials
# 2. Keep .env.local in .gitignore (it's already there)
# 3. For production, set these in Vercel dashboard
# 4. Never commit sensitive keys to version control
# 5. Rotate keys regularly for security
