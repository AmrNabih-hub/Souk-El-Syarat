{
  "name": "Souk El-Syarat - Premium Automotive Marketplace",
  "short_name": "Souk Syarat",
  "description": "Egypt's premier luxury automotive marketplace for cars, parts, and professional services",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1a1a1a",
  "theme_color": "#d4af37",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "ar",
  "categories": ["automotive", "marketplace", "shopping"],
  "icons": [
    {
      "src": "/app-icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Home page showing luxury car collection"
    },
    {
      "src": "/screenshots/mobile-marketplace.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Mobile marketplace view"
    }
  ],
  "shortcuts": [
    {
      "name": "Browse Cars",
      "short_name": "Cars",
      "description": "Browse luxury vehicles",
      "url": "/marketplace?category=cars",
      "icons": [
        {
          "src": "/icons/car-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Auto Parts",
      "short_name": "Parts",
      "description": "Find premium auto parts",
      "url": "/marketplace?category=parts",
      "icons": [
        {
          "src": "/icons/parts-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Services",
      "short_name": "Services",
      "description": "Professional automotive services",
      "url": "/marketplace?category=services",
      "icons": [
        {
          "src": "/icons/service-shortcut.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.soukelsynrat.app",
      "id": "com.soukelsynrat.app"
    }
  ],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+soukelsynrat",
      "url": "/handle?type=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/handle-files",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".webp", ".gif"]
      }
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  }
}
