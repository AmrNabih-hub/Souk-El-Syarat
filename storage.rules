rules_version = '2';

// Firebase Storage Security Rules for Souk El-Sayarat
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.role == 'admin';
    }
    
    function isVendor() {
      return request.auth != null && 
             request.auth.token.role == 'vendor';
    }
    
    function isValidImageFile() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 5 * 1024 * 1024; // 5MB limit
    }
    
    function isValidDocumentFile() {
      return request.resource.contentType.matches('application/pdf|application/msword|application/vnd.openxmlformats-officedocument.wordprocessingml.document') &&
             request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }

    // Product images - vendors can upload, authenticated users can read
    match /products/{productId}/{imageId} {
      allow read: if isAuthenticated(); // Only authenticated users can read
      allow write: if isAuthenticated() && (isVendor() || isAdmin()) && isValidImageFile();
      allow delete: if isAuthenticated() && (isVendor() || isAdmin());
    }

    // User profile images
    match /users/{userId}/profile/{imageId} {
      allow read: if isAuthenticated(); // Only authenticated users can read
      allow write: if isAuthenticated() && (isOwner(userId) || isAdmin()) && isValidImageFile();
      allow delete: if isAuthenticated() && (isOwner(userId) || isAdmin());
    }

    // Vendor business documents
    match /vendors/{vendorId}/documents/{documentId} {
      allow read: if isAuthenticated() && (isOwner(vendorId) || isAdmin());
      allow write: if isAuthenticated() && (isOwner(vendorId) || isAdmin()) && isValidDocumentFile();
      allow delete: if isAuthenticated() && (isOwner(vendorId) || isAdmin());
    }

    // Vendor application documents
    match /vendorApplications/{applicationId}/documents/{documentId} {
      allow read: if isAuthenticated() && (isOwner(applicationId) || isAdmin());
      allow write: if isAuthenticated() && isOwner(applicationId) && isValidDocumentFile();
      allow delete: if isAuthenticated() && (isOwner(applicationId) || isAdmin());
    }

    // Chat/Message attachments
    match /messages/{messageId}/attachments/{attachmentId} {
      allow read: if isAuthenticated(); // Only authenticated users can access
      allow write: if isAuthenticated() && (isValidImageFile() || isValidDocumentFile());
      allow delete: if isAuthenticated();
    }

    // Order receipts and invoices
    match /orders/{orderId}/documents/{documentId} {
      allow read: if isAuthenticated(); // Customer, vendor, or admin
      allow write: if isAuthenticated() && (isVendor() || isAdmin()) && isValidDocumentFile();
      allow delete: if isAdmin();
    }

    // System/admin uploads
    match /system/{allPaths=**} {
      allow read: if true; // Public system assets
      allow write, delete: if isAdmin();
    }

    // Temporary uploads (for processing)
    match /temp/{userId}/{fileName} {
      allow read, write: if isAuthenticated() && isOwner(userId);
      allow delete: if isAuthenticated() && (isOwner(userId) || isAdmin());
    }
  }
}