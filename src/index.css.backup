/* stylelint-disable */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* Reset and Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Global Styles */
@layer base {
  html {
    font-family: 'Cairo', 'Inter', system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    @apply bg-gradient-to-br from-gray-50 via-white to-gray-100 text-gray-900 antialiased;
    @apply dark:bg-gradient-to-br dark:from-neutral-950 dark:via-neutral-900 dark:to-neutral-950 dark:text-neutral-100;
    font-feature-settings: 'cv02', 'cv03', 'cv04', 'cv11';
    min-height: 100vh;
    overflow-x: hidden;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  #root {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  * {
    @apply border-gray-200 dark:border-neutral-700;
  }

  /* RTL Support */
  [dir='rtl'] {
    direction: rtl;
  }

  [dir='ltr'] {
    direction: ltr;
  }

  /* Scrollbar Styles */
  ::-webkit-scrollbar {
    @apply w-2 h-2;
  }

  ::-webkit-scrollbar-track {
    @apply bg-gray-100 dark:bg-neutral-800 rounded-full;
  }

  ::-webkit-scrollbar-thumb {
    @apply bg-gray-300 dark:bg-neutral-600 rounded-full hover:bg-gray-400 dark:hover:bg-neutral-500;
  }

  /* Firefox Scrollbar */
  * {
    scrollbar-width: thin;
    scrollbar-color: #d4d4d4 #f5f5f5;
  }

  .dark * {
    scrollbar-color: #525252 #262626;
  }

  /* Theme Transition */
  html,
  body,
  #root {
    transition: background-color 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
}

/* Component Styles */
@layer components {
  /* Button Variants */
  .btn {
    @apply inline-flex items-center justify-center rounded-lg font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed;
    @apply dark:focus:ring-offset-neutral-800;
  }

  .btn-primary {
    @apply bg-primary-500 text-white hover:bg-primary-600 focus:ring-primary-500 shadow-md hover:shadow-lg transform hover:scale-105;
    @apply dark:bg-primary-600 dark:hover:bg-primary-500 dark:shadow-primary-500/20 dark:hover:shadow-primary-500/30;
  }

  .btn-secondary {
    @apply bg-secondary-500 text-white hover:bg-secondary-600 focus:ring-secondary-500 shadow-md hover:shadow-lg transform hover:scale-105;
    @apply dark:bg-secondary-600 dark:hover:bg-secondary-500 dark:shadow-secondary-500/20 dark:hover:shadow-secondary-500/30;
  }

  .btn-outline {
    @apply border-2 border-primary-500 text-primary-500 hover:bg-primary-500 hover:text-white;
    @apply dark:border-primary-400 dark:text-primary-400 dark:hover:bg-primary-400 dark:hover:text-neutral-900;
  }

  /* Card Styles */
  .card {
    @apply bg-white border border-neutral-200 rounded-xl shadow-sm;
    @apply dark:bg-neutral-800 dark:border-neutral-700 dark:shadow-neutral-900/20;
  }

  .card-hover {
    @apply transition-all duration-300 hover:shadow-lg hover:-translate-y-1;
    @apply dark:hover:shadow-neutral-900/40;
  }

  /* Glass Effect */
  .glass {
    @apply bg-white/10 backdrop-blur-md border border-white/20;
    @apply dark:bg-neutral-900/30 dark:backdrop-blur-md dark:border-neutral-700/30;
  }

  .glass-strong {
    @apply bg-white/20 backdrop-blur-lg border border-white/30;
    @apply dark:bg-neutral-800/40 dark:backdrop-blur-lg dark:border-neutral-600/40;
  }

  /* Input Styles */
  .input {
    @apply w-full px-4 py-3 border border-neutral-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors;
    @apply dark:bg-neutral-800 dark:border-neutral-700 dark:text-neutral-100 dark:focus:ring-primary-400;
  }

  /* Navigation Styles */
  .nav-link {
    @apply text-neutral-600 hover:text-primary-600 font-medium transition-colors;
    @apply dark:text-neutral-300 dark:hover:text-primary-400;
  }

  .nav-link-active {
    @apply text-primary-600 font-semibold;
    @apply dark:text-primary-400;
  }

  /* Hero Section Dark Mode */
  .hero-dark {
    @apply dark:bg-gradient-to-br dark:from-neutral-950 dark:via-neutral-900 dark:to-neutral-950;
  }

  /* Egyptian Gold Accent in Dark Mode */
  .egyptian-gold {
    @apply text-primary-500 dark:text-primary-400;
  }

  .egyptian-gold-bg {
    @apply bg-primary-500 dark:bg-primary-600;
  }

  /* Premium Dark Mode Text */
  .text-primary-dark {
    @apply text-neutral-900 dark:text-neutral-100;
  }

  .text-secondary-dark {
    @apply text-neutral-600 dark:text-neutral-400;
  }

  .text-tertiary-dark {
    @apply text-neutral-500 dark:text-neutral-500;
  }
}

  .btn-outline {
    @apply border-2 border-primary-500 text-primary-500 hover:bg-primary-500 hover:text-white focus:ring-primary-500;
  }

  .btn-ghost {
    @apply text-gray-600 hover:bg-gray-100 focus:ring-gray-500;
  }

  .btn-sm {
    @apply px-3 py-1.5 text-sm;
  }

  .btn-md {
    @apply px-4 py-2 text-base;
  }

  .btn-lg {
    @apply px-6 py-3 text-lg;
  }

  /* Card Styles */
  .card {
    @apply bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden;
  }

  .card-hover {
    @apply transition-all duration-300 hover:shadow-lg hover:shadow-primary-500/10 hover:-translate-y-1;
  }

  .card-glow {
    @apply shadow-glow hover:shadow-glow-lg transition-shadow duration-300;
  }

  /* Input Styles */
  .input {
    @apply block w-full rounded-lg border-gray-300 bg-white px-3 py-2 text-gray-900 placeholder-gray-500 focus:border-primary-500 focus:ring-1 focus:ring-primary-500 disabled:opacity-50 disabled:cursor-not-allowed;
  }

  .input-error {
    @apply border-red-500 focus:border-red-500 focus:ring-red-500;
  }

  /* Badge Styles */
  .badge {
    @apply inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium;
  }

  .badge-success {
    @apply bg-success-100 text-success-800;
  }

  .badge-warning {
    @apply bg-yellow-100 text-yellow-800;
  }

  .badge-error {
    @apply bg-red-100 text-red-800;
  }

  .badge-info {
    @apply bg-secondary-100 text-secondary-800;
  }

  /* Loading Spinner */
  .spinner {
    @apply animate-spin rounded-full border-2 border-gray-300 border-t-primary-500;
  }

  /* Gradient Text */
  .gradient-text {
    @apply bg-gradient-to-r from-primary-500 to-secondary-500 bg-clip-text text-transparent;
  }

  /* Floating Elements */
  .floating {
    @apply animate-float;
  }

  /* Glow Effect */
  .glow-effect {
    @apply animate-glow;
  }

  /* Glass Morphism - Cross-browser compatible */
  .glass {
    -webkit-backdrop-filter: blur(12px);
    backdrop-filter: blur(12px);
    @apply bg-white/80 border border-white/20;
  }

  .glass-dark {
    -webkit-backdrop-filter: blur(12px);
    backdrop-filter: blur(12px);
    @apply bg-gray-900/80 border border-white/10;
  }

  /* Modern Glass Effect */
  .glass-effect {
    background: rgba(255, 255, 255, 0.1);
    -webkit-backdrop-filter: blur(10px);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

/* Utility Classes */
@layer utilities {
  /* Text Direction Utilities */
  .text-start {
    text-align: start;
  }

  .text-end {
    text-align: end;
  }

  /* Custom Animations */
  .animate-fade-in {
    animation: fadeIn 0.5s ease-in-out;
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }

  .animate-scale-in {
    animation: scaleIn 0.3s ease-out;
  }

  .animate-slide-in-right {
    animation: slideInRight 0.4s ease-out;
  }

  .animate-slide-in-left {
    animation: slideInLeft 0.4s ease-out;
  }

  /* Custom Shadows */
  .shadow-primary {
    box-shadow:
      0 4px 6px -1px rgb(245 158 11 / 0.1),
      0 2px 4px -1px rgb(245 158 11 / 0.06);
  }

  .shadow-secondary {
    box-shadow:
      0 4px 6px -1px rgb(14 165 233 / 0.1),
      0 2px 4px -1px rgb(14 165 233 / 0.06);
  }

  /* Responsive Typography */
  .text-responsive-xs {
    @apply text-xs sm:text-sm;
  }

  .text-responsive-sm {
    @apply text-sm sm:text-base;
  }

  .text-responsive-base {
    @apply text-base sm:text-lg;
  }

  .text-responsive-lg {
    @apply text-lg sm:text-xl;
  }

  .text-responsive-xl {
    @apply text-xl sm:text-2xl;
  }

  .text-responsive-2xl {
    @apply text-2xl sm:text-3xl;
  }

  .text-responsive-3xl {
    @apply text-3xl sm:text-4xl;
  }

  /* Layout Utilities */
  .safe-top {
    padding-top: env(safe-area-inset-top);
  }

  .safe-bottom {
    padding-bottom: env(safe-area-inset-bottom);
  }

  .safe-left {
    padding-left: env(safe-area-inset-left);
  }

  .safe-right {
    padding-right: env(safe-area-inset-right);
  }
}

/* Custom Animations for Egyptian Theme */
@keyframes papyrusFlow {
  0%,
  100% {
    transform: translateY(0px) rotate(0deg);
    filter: hue-rotate(0deg);
  }
  33% {
    transform: translateY(-10px) rotate(1deg);
    filter: hue-rotate(10deg);
  }
  66% {
    transform: translateY(5px) rotate(-1deg);
    filter: hue-rotate(-10deg);
  }
}

@keyframes goldShimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

.animate-papyrus-flow {
  animation: papyrusFlow 4s ease-in-out infinite;
}

.animate-gold-shimmer {
  background: linear-gradient(90deg, transparent, rgba(245, 158, 11, 0.4), transparent);
  background-size: 200% 100%;
  animation: goldShimmer 2s infinite;
}

/* Product Card Hover Effects */
.product-card {
  @apply transition-all duration-300 ease-in-out;

  &:hover {
    @apply transform -translate-y-2 shadow-2xl;

    .product-image {
      @apply scale-110;
    }

    .product-overlay {
      @apply opacity-100;
    }
  }
}

.product-image {
  @apply transition-transform duration-300 ease-in-out;
}

.product-overlay {
  @apply opacity-0 transition-opacity duration-300 ease-in-out;
}

/* Egyptian Cultural Elements */
.hieroglyph-border {
  background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23f59e0b' fill-opacity='0.1'%3E%3Cpath d='M30 30c0-16.569 13.431-30 30-30v60c-16.569 0-30-13.431-30-30z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
}

.pyramid-pattern {
  background-image: linear-gradient(
    135deg,
    transparent 25%,
    rgba(245, 158, 11, 0.1) 25%,
    rgba(245, 158, 11, 0.1) 50%,
    transparent 50%,
    transparent 75%,
    rgba(245, 158, 11, 0.1) 75%
  );
  background-size: 20px 20px;
}

/* Loading States */
.loading-skeleton {
  @apply animate-pulse bg-gray-200 rounded;
}

.loading-shimmer {
  background: linear-gradient(90deg, #f5f5f5 25%, #e5e5e5 50%, #f5f5f5 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* Additional Modern UI/UX Enhancements */
@layer utilities {
  /* Loading Animation */
  .loading-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  /* Splash Screen Animation */
  .splash-fade-in {
    animation: splashFadeIn 0.8s ease-out forwards;
  }

  @keyframes splashFadeIn {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Modern Glass Effect */
  .glass-effect {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  /* Gradient Text Animation */
  .gradient-text-animated {
    background: linear-gradient(90deg, #f59e0b, #0ea5e9, #f59e0b);
    background-size: 200% auto;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientShift 3s ease infinite;
  }

  @keyframes gradientShift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  /* Modern Card Hover */
  .card-modern-hover {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .card-modern-hover:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  /* Smooth Fade Transitions */
  .fade-in-view {
    animation: fadeInView 0.6s ease-out forwards;
  }

  @keyframes fadeInView {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
}
