# Professional Node.js Project Configuration
# Optimized for AWS Amplify deployment and enterprise development

# Package resolution and installation
registry=https://registry.npmjs.org/
prefer-offline=true
audit-level=moderate
fund=false
save-exact=true

# Performance optimizations
maxsockets=50
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Security settings
audit=true

# Development optimizations
progress=true
loglevel=warn

# Package manager settings
package-lock=true

# Legacy peer deps handling for compatibility
legacy-peer-deps=true

# Engine strict mode (enforces Node 20)
engine-strict=true