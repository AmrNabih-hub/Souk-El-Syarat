{
  "name": "souk-el-syarat",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Professional Arabic car marketplace with comprehensive features",
  "engines": {
    "node": ">=20.0.0 <21.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.8.2",
  "scripts": {
    "dev": "vite",
    "build": "npx vite build",
    "build:production": "cross-env NODE_ENV=production npx vite build",
    "build:ci": "cross-env NODE_ENV=production CI=true npx vite build --mode production",
    "build:deploy": "echo 'Building for deployment...' && cross-env NODE_ENV=production CI=true npx vite build --mode production",
    "deploy:fullstack": "bash deploy-fullstack.sh",
    "preview": "npx vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:ci": "eslint . --ext ts,tsx --max-warnings 700",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "type-check:ci": "tsc --noEmit --skipLibCheck",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:debug": "vitest --inspect-brk",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "setup:appwrite": "node scripts/setup-appwrite.js",
    "setup:appwrite:freetier": "node scripts/setup-appwrite-freetier.js",
    "test:production": "node scripts/production-check.js",
    "test:appwrite": "start appwrite-test.html",
    "deploy:build": "npm run build:production",
    "deploy:appwrite": "npm run deploy:build && echo 'Build ready for Appwrite deployment'",
    "build:deployment": "node scripts/build-for-deployment.js",
    "postinstall": "echo 'âœ… Dependencies installed successfully - TypeScript checking moved to CI/CD workflows'",
    "//prepare": "node -e \"process.env.CI ? console.log('Skipping prepare hook in CI environment') : require('child_process').execSync('npm run precommit', {stdio: 'inherit'})\"",
    "precommit": "npm run lint:fix && npm run format && npm run type-check:ci",
    "precommit:ci": "npm run lint:ci && npm run format:check && npm run type-check:ci",
    "clean": "rm -rf dist coverage test-results",
    "validate": "npm run lint:ci && npm run format:check && npm run type-check:ci && npm run test:coverage",
    "validate:ci": "npm run lint:ci && npm run format:check && npm run type-check:ci && npm run test:coverage",
    "lint:css": "stylelint \"src/**/*.css\""
  },
  "dependencies": {
    "@aws-amplify/ui-react": "^6.1.12",
    "@esbuild-plugins/node-globals-polyfill": "0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "0.2.2",
    "@headlessui/react": "^2.1.10",
    "@heroicons/react": "^2.1.5",
    "@hookform/resolvers": "^3.9.0",
    "@tanstack/react-query": "^5.62.2",
    "@types/crypto-js": "4.2.2",
    "appwrite": "21.0.0",
    "aws-amplify": "^6.6.3",
    "clsx": "^2.1.1",
    "crypto-js": "4.2.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.4.2",
    "lucide-react": "^0.468.0",
    "postcss": "^8.4.47",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.54.0",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.16.0",
    "react-router-dom": "7.9.3",
    "recharts": "^3.2.0",
    "rollup-plugin-node-polyfills": "0.2.1",
    "yup": "^1.6.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@size-limit/preset-app": "^11.1.6",
    "@tailwindcss/forms": "^0.5.7",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/express": "5.0.3",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.1",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "c8": "^10.1.3",
    "complexity-report": "^2.0.0-alpha",
    "coverage-badges-cli": "^2.0.1",
    "cross-env": "7.0.3",
    "dotenv": "17.2.3",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^2.0.4",
    "jsdom": "^26.0.0",
    "lighthouse": "^12.3.0",
    "msw": "^2.7.0",
    "node-appwrite": "20.0.0",
    "prettier": "^3.4.2",
    "size-limit": "^11.1.6",
    "stylelint": "16.24.0",
    "stylelint-config-standard": "39.0.0",
    "stylelint-config-tailwindcss": "1.0.0",
    "tailwindcss": "^3.4.17",
    "terser": "^5.37.0",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.2",
    "vite": "7.1.9",
    "vite-bundle-analyzer": "^0.12.1",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-pwa": "1.0.3",
    "vitest": "^2.1.8",
    "workbox-window": "7.3.0"
  },
  "overrides": {
    "postcss": "^8.4.47",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "ecommerce",
    "marketplace",
    "automotive",
    "egypt",
    "cars",
    "react",
    "typescript"
  ],
  "author": "Souk El-Syarat Team",
