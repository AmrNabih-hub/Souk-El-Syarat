{
  "name": "souk-el-syarat",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Professional Arabic car marketplace with comprehensive features",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:production": "NODE_ENV=production vite build",
    "build:ci": "NODE_ENV=production CI=true vite build --mode production",
    "build:deploy": "echo 'Building for deployment...' && NODE_ENV=production CI=true vite build --mode production",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:hosting": "firebase deploy --only hosting",
    "firebase:deploy:functions": "firebase deploy --only functions",
    "firebase:deploy:rules": "firebase deploy --only firestore:rules,storage",
    "firebase:deploy:indexes": "firebase deploy --only firestore:indexes",
    "firebase:deploy:full": "firebase deploy --force",
    "firebase:emulators": "firebase emulators:start",
    "deploy:fullstack": "bash deploy-fullstack.sh",
    "deploy:quick": "npm run build:deploy && firebase deploy",
    "deploy:production": "NODE_ENV=production npm run validate && npm run build:deploy && firebase deploy",
    "deploy:now": "bash deploy-now.sh",
    "deploy:immediate": "bash deploy-immediate.sh",
    "deploy:urgent": "npm run build:deploy && firebase deploy --force",
    "deploy:fast": "npm ci --silent && npm run build:deploy && firebase deploy --force",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:ci": "eslint . --ext ts,tsx --max-warnings 50",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "type-check:ci": "tsc --noEmit --skipLibCheck",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:debug": "vitest --inspect-brk",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "postinstall": "echo 'âœ… Dependencies installed successfully - TypeScript checking moved to CI/CD workflows'",
    "prepare": "node -e \"process.env.CI ? console.log('Skipping prepare hook in CI environment') : require('child_process').execSync('npm run precommit', {stdio: 'inherit'})\"",
    "precommit": "npm run lint:fix && npm run format && npm run type-check:ci",
    "precommit:ci": "npm run lint:ci && npm run format:check && npm run type-check:ci",
    "clean": "rm -rf dist coverage test-results",
    "validate": "npm run lint:ci && npm run format:check && npm run type-check:ci && npm run test:coverage",
    "validate:ci": "npm run lint:ci && npm run format:check && npm run type-check:ci && npm run test:coverage"
  },
  "dependencies": {
    "@dataconnect/generated": "file:dataconnect-generated/js/example-connector",
    "@faker-js/faker": "^10.0.0",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@hookform/resolvers": "^3.3.2",
    "@simplewebauthn/browser": "^13.1.2",
    "@simplewebauthn/server": "^13.1.2",
    "@tanstack/react-query": "^5.8.4",
    "axios": "^1.11.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "firebase": "^12.2.1",
    "framer-motion": "^10.16.16",
    "idb": "^8.0.3",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.16.0",
    "react-router-dom": "^6.20.1",
    "recharts": "^3.1.2",
    "socket.io-client": "^4.8.1",
    "yup": "^1.4.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/runtime": "^7.28.3",
    "@playwright/test": "^1.40.0",
    "@size-limit/preset-app": "^11.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "c8": "^9.0.0",
    "chalk": "^5.6.0",
    "colors": "^1.4.0",
    "complexity-report": "^2.0.0-alpha",
    "coverage-badges-cli": "^1.2.5",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "firebase-admin": "^13.5.0",
    "jsdom": "^23.0.1",
    "lighthouse": "^12.8.1",
    "msw": "^2.10.5",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "size-limit": "^11.0.0",
    "tailwindcss": "^3.3.6",
    "terser": "^5.43.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.2.2",
    "vite": "^7.1.3",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^3.2.4",
    "workbox-window": "^7.3.0"
  },
  "keywords": [
    "ecommerce",
