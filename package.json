{
  "name": "souk-el-syarat",
  "version": "1.0.0",
  "description": "Modern E-commerce Marketplace for Egyptian Automotive Market",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "build:production": "NODE_ENV=production npm run build",
    "preview": "vite preview",
    "preview:build": "npm run build && vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:security": "eslint . --ext ts,tsx --config .eslintrc-security.js",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --noEmit --strict",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:unit": "vitest run src/**/*.test.{ts,tsx}",
    "test:integration": "vitest run src/tests/integration/**/*.test.{ts,tsx}",
    "test:e2e": "playwright test",
    "test:mobile": "playwright test --project=mobile",
    "test:coverage": "vitest --coverage",
    "test:coverage:unit": "vitest --coverage src/**/*.test.{ts,tsx}",
    "test:coverage:integration": "vitest --coverage src/tests/integration/**/*.test.{ts,tsx}",
    "test:report": "vitest run --reporter=html --reporter=json --outputFile=test-results.json",
    "test:threshold": "vitest run --coverage --coverage.threshold.global.branches=80 --coverage.threshold.global.functions=80 --coverage.threshold.global.lines=80 --coverage.threshold.global.statements=80",
    "test:watch": "vitest --watch",
    "coverage:report": "c8 report --reporter=html --reporter=text --reporter=lcov",
    "coverage:badges": "npx coverage-badges-cli --output coverage-badges",
    "coverage:threshold": "c8 check-coverage --lines 80 --functions 80 --branches 80 --statements 80",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm audit && npm run lint:security",
    "security:fix": "npm audit fix",
    "analyze": "npm run build && npx vite-bundle-analyzer dist",
    "bundle:size-limit": "npx size-limit",
    "performance:lighthouse": "npx lighthouse http://localhost:4173 --output=html --output-path=lighthouse-report.html",
    "clean": "rm -rf dist node_modules/.vite coverage test-results",
    "clean:all": "npm run clean && rm -rf node_modules",
    "clean:cache": "rm -rf node_modules/.cache",
    "firebase:emulators": "firebase emulators:start",
    "firebase:emulators:export": "firebase emulators:export --export-path=./firebase-export",
    "firebase:emulators:import": "firebase emulators:start --import=./firebase-export",
    "firebase:deploy": "npm run build && firebase deploy",
    "firebase:functions:deploy": "firebase deploy --only functions",
    "firebase:hosting:deploy": "npm run build && firebase deploy --only hosting",
    "firebase:rules:deploy": "firebase deploy --only firestore:rules,storage",
    "deploy:staging": "npm run build && firebase use staging && firebase deploy",
    "deploy:production": "npm run build:production && firebase use default && firebase deploy",
    "deploy:preview": "npm run build && firebase hosting:channel:deploy preview",
    "ci": "npm run lint && npm run type-check && npm run test:run && npm run build",
    "ci:full": "npm run security:check && npm run lint && npm run type-check && npm run test:coverage && npm run build",
    "precommit": "npm run lint:fix && npm run format && npm run type-check",
    "prepare": "[ -n \"$CI\" ] && echo 'Skipping prepare hook in CI environment' || npm run precommit",
    "start:prod": "npm run build && npm run preview",
    "health-check": "curl -f http://localhost:4173/health || exit 1",
    "docs:generate": "npx typedoc --out docs/api src",
    "docs:serve": "npx serve docs",
    "postinstall": "echo 'âœ… Dependencies installed successfully - TypeScript checking moved to CI/CD workflows'",
    "validate": "npm run ci:full"
  },
  "dependencies": {
    "@dataconnect/generated": "file:dataconnect-generated/js/example-connector",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@hookform/resolvers": "^3.3.2",
    "@tanstack/react-query": "^5.8.4",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "firebase": "^12.1.0",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.16.0",
    "react-router-dom": "^6.20.1",
    "recharts": "^3.1.2",
    "yup": "^1.4.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@size-limit/preset-app": "^11.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "c8": "^9.0.0",
    "complexity-report": "^2.0.0-alpha",
    "coverage-badges-cli": "^1.2.5",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "jsdom": "^23.0.1",
    "lighthouse": "^12.8.1",
    "msw": "^2.10.5",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "size-limit": "^11.0.0",
    "tailwindcss": "^3.3.6",
    "terser": "^5.43.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.2.2",
    "vite": "^7.1.3",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "ecommerce",
    "marketplace",
    "automotive",
    "egypt",
    "cars",
    "react",
    "typescript",
    "firebase"
  ],
  "author": "Souk El-Syarat Team",
  "license": "MIT"
}
