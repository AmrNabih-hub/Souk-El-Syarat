{
  "name": "souk-el-syarat",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Professional Arabic car marketplace with comprehensive features",
  "scripts": {
    "dev": "vite",
    "start": "tsx server.ts",
    "start:prod": "tsx server.ts",
    "start:backend": "tsx server.ts",
    "build:css": "npx tailwindcss -i ./src/styles.css -o ./src/index.css --watch",
    "build:css:prod": "npx tailwindcss -i ./src/styles.css -o ./src/index.css --minify",
    "build": "vite build",
    "build:production": "NODE_ENV=production vite build",
    "build:ci": "NODE_ENV=production CI=true vite build --mode production",
    "build:functions": "cd functions && npm install --include=dev && npm run build",
    "build:apphosting": "npm run build:functions",
    "build:apphosting:ci": "npm install --include=dev && cross-env NODE_ENV=production CI=true vite build --mode production --outDir dist",
    "deploy": "firebase deploy --only apphosting:souk-el-sayarat-backend",
    "deploy:prod": "npm run build:apphosting && npm run deploy",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:hosting": "firebase deploy --only hosting",
    "firebase:deploy:functions": "firebase deploy --only functions",
    "firebase:deploy:rules": "firebase deploy --only firestore:rules,storage",
    "firebase:deploy:indexes": "firebase deploy --only firestore:indexes",
    "firebase:deploy:full": "firebase deploy --force",
    "firebase:emulators": "firebase emulators:start",
    "deploy:fullstack": "bash deploy-fullstack.sh",
    "deploy:quick": "npm run build:deploy && firebase deploy",
    "deploy:production": "NODE_ENV=production npm run validate && npm run build:deploy && firebase deploy",
    "deploy:now": "bash deploy-now.sh",
    "deploy:immediate": "bash deploy-immediate.sh",
    "deploy:urgent": "npm run build:deploy && firebase deploy --force",
    "deploy:fast": "npm ci --silent && npm run build:deploy && firebase deploy --force",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:ci": "eslint . --ext ts,tsx --max-warnings 50",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "type-check:ci": "tsc --noEmit --skipLibCheck",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose",
    "automation": "node scripts/automation-pipeline.js",
    "pipeline": "npm run automation",
    "quality-check": "npm run type-check && npm run lint && npm run test:unit",
    "production-ready": "npm run quality-check && npm run build && npm run test:integration",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:debug": "vitest --inspect-brk",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "postinstall": "echo '✅ Dependencies installed successfully - TypeScript checking moved to CI/CD workflows'",
    "prepare": "echo '✅ Dependencies prepared successfully'",
    "precommit": "npm run lint:fix && npm run format && npm run type-check:ci",
    "precommit:ci": "npm run lint:ci && npm run format:check && npm run type-check:ci",
    "clean": "rm -rf dist coverage test-results",
    "validate": "npm run lint:ci && npm run format:check && npm run type-check:ci && npm run test:coverage",
    "validate:ci": "npm run lint:ci && npm run format:check && npm run type-check:ci && npm run test:coverage",
    "deploy:safe": "node scripts/validate-before-deploy.js && npm run build && npm run deploy:prod"
  },
  "dependencies": {
    "@dataconnect/generated": "file:dataconnect-generated/js/example-connector",
    "@headlessui/react": "^2.0.0",
    "@heroicons/react": "^2.0.18",
    "@hookform/resolvers": "^3.3.2",
    "@tanstack/react-query": "^5.8.4",
    "clsx": "^2.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "firebase": "^12.1.0",
    "firebase-admin": "^13.4.0",
    "framer-motion": "^11.0.0",
    "helmet": "^7.2.0",
    "lucide-react": "^0.294.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.16.0",
    "react-router-dom": "^7.0.0",
    "recharts": "^3.1.2",
    "svg2png-cli": "^1.1.1",
    "yup": "^1.4.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@size-limit/preset-app": "^11.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "c8": "^9.0.0",
    "complexity-report": "^2.0.0-alpha",
    "concurrently": "^9.2.1",
    "coverage-badges-cli": "^1.2.5",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "jsdom": "^23.0.1",
    "lighthouse": "^12.8.1",
    "msw": "^2.10.5",
    "node-fetch": "^3.3.2",
    "postcss": "^8.5.6",
    "prettier": "^3.1.0",
    "size-limit": "^11.0.0",
    "tailwindcss": "^3.4.17",
    "terser": "^5.43.1",
    "tsx": "^4.20.5",
    "typedoc": "^0.27.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "@headlessui/react": {
      "react": "$react",
      "react-dom": "$react-dom"
    },
    "@testing-library/react": {
      "react": "$react",
      "react-dom": "$react-dom"
    },
    "framer-motion": {
      "react": "$react",
      "react-dom": "$react-dom"
    },
    "lucide-react": {
      "react": "$react",
      "react-dom": "$react-dom"
    }
  },
  "keywords": [
    "ecommerce",
    "marketplace",
    "automotive",
    "egypt",
    "cars",
    "react",
    "typescript",
    "firebase"
  ],
  "author": "Souk El-Syarat Team",
  "license": "MIT"
}
