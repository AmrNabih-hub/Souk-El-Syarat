{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    
    "products": {
      ".read": true,
      ".write": "auth != null && (auth.token.role == 'admin' || auth.token.role == 'vendor')"
    },
    
    "categories": {
      ".read": true,
      ".write": "auth != null && auth.token.role == 'admin'"
    },
    
    "users": {
      "$uid": {
        ".read": "auth != null && (auth.uid == $uid || auth.token.role == 'admin')",
        ".write": "auth != null && (auth.uid == $uid || auth.token.role == 'admin')"
      }
    },
    
    "orders": {
      "$orderId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    
    "chats": {
      "$chatId": {
        ".read": "auth != null",
        ".write": "auth != null",
        
        "messages": {
          "$messageId": {
            ".read": "auth != null",
            ".write": "auth != null"
          }
        }
      }
    },
    
    "inventory": {
      "$productId": {
        ".read": true,
        ".write": "auth != null && (auth.token.role == 'admin' || auth.token.role == 'vendor')"
      }
    },
    
    "status": {
      "$uid": {
        ".read": true,
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    
    "statistics": {
      ".read": true,
      ".write": "auth != null && auth.token.role == 'admin'"
    },
    
    "test": {
      ".read": true,
      ".write": true
    }
  }
}