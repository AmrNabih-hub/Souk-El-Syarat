{
  "root": true,
  "env": { 
    "browser": true, 
    "es2020": true,
    "node": true,
    "jest": true,
    "firebase/firebase": true
  },
  "extends": [
    "eslint:recommended",
    "@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:react/jsx-runtime"
  ],
  "ignorePatterns": [
    "dist", 
    ".eslintrc.json", 
    "node_modules",
    "build",
    "coverage",
    "public",
    "*.config.js",
    "*.config.ts"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "react-refresh",
    "@typescript-eslint"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react-refresh/only-export-components": [
      "warn",
      { "allowConstantExport": true }
    ],
    "@typescript-eslint/no-unused-vars": [
      "error",
      { 
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-non-null-assertion": "warn",
    "no-console": "warn",
    "no-debugger": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "no-undef": "error",
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off"
  },
  "globals": {
    "NodeJS": "readonly",
    "NotificationPermission": "readonly",
    "React": "readonly",
    "describe": "readonly",
    "it": "readonly",
    "expect": "readonly",
    "beforeEach": "readonly",
    "afterEach": "readonly",
    "vi": "readonly",
    "test": "readonly",
    "collection": "readonly",
    "db": "readonly",
    "addDoc": "readonly",
    "serverTimestamp": "readonly",
    "query": "readonly",
    "where": "readonly",
    "orderBy": "readonly",
    "getDocs": "readonly",
    "doc": "readonly",
    "updateDoc": "readonly",
    "writeBatch": "readonly",
    "deleteDoc": "readonly",
    "onSnapshot": "readonly",
    "limit": "readonly",
    "Conversation": "readonly",
    "OrderStatus": "readonly"
  },
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"],
      "env": {
        "vitest-globals/env": true
      },
      "globals": {
        "describe": "readonly",
        "it": "readonly",
        "expect": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "vi": "readonly",
        "test": "readonly"
      }
    }
  ]
}