{
  "name": "souk-el-sayarat-backend",
  "version": "1.0.0",
  "description": "Production-ready backend for Egypt's leading automotive marketplace",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run test && npm run lint",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "logs": "tail -f logs/combined.log",
    "health": "curl http://localhost:8080/health",
    "deploy": "gcloud run deploy souk-el-sayarat-backend --image gcr.io/souk-el-syarat/souk-el-sayarat-backend --platform managed --region europe-west4 --allow-unauthenticated",
    "docker:build": "docker build -t souk-el-sayarat-backend .",
    "docker:run": "docker run -p 8080:8080 souk-el-sayarat-backend",
    "simulate": "node scripts/simulate-deployment.js"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.1.0",
    "@google-cloud/storage": "^7.7.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "firebase",
    "express",
    "backend",
    "marketplace",
    "automotive",
    "egypt"
  ],
  "author": "Souk El-Sayarat Team",
  "license": "MIT"
}
